<head>
    <title>{{title}}</title>
    <link rel="stylesheet" href="/stylesheets/profile.css" type="text/css" />
</head>
<div class="container">
{{# if success_msg}}
  <div class="alert alert-success">
    <p> {{success_msg}}</p>
    </div>
{{/if}} 
</div>
<div class="container">
    <h2>All Books:</h2>
    <hr></hr>
    <p><small>Click on the name to request a trade</small></p>
    <form method="post">
    <input type="hidden", name="_csrf", value="{{csrfToken}}">
    {{# each books}}
    <div class="cover">
        <figure>
        <img src="{{this.url}}" onerror="imgError(this)"  alt="{{this.title}}">
        {{# if this.hasRequested}}
         <button class="btn btn-link" name="handle" value="{{this._id}}" id="btn"><figcaption >{{this.title}}</figcaption></button>
         {{else}}
         <button class="btn btn-link" name="handle" value="{{this._id}}" disabled><figcaption >Not available</figcaption></button>
         {{/if}}
        </figure>
    </div>
    {{/each}}
    </form>
</div>
