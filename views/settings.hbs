<head>
    <title>{{title}}</title>
</head>
        <div id="container" class="container">
    <div align="center">
  {{# if error}}
   {{#each error}}
   <div class="alert alert-danger">
    <p> {{this}}</p>
    </div>
    {{/each}}
{{/if}} 

{{# if success}}
  <div class="alert alert-success">
    <p> {{success}}</p>
    </div>
{{/if}} 

{{# if success_msg}}
  <div class="alert alert-success">
    <p> {{success_msg}}</p>
    </div>
{{/if}} 
</div>
</div>
<div class="container">
<h1>Update Profile</h1>
 <form  method="post">
         <input type="hidden", name="_csrf", value="{{csrfToken}}">  
        
        <div class="form-group">
        <input type="text" class="form-control" id="New_username" name="New_username" placeholder="Username" required >
          </div>
          
         <div class="form-group">
        <input type="text" class="form-control" id="New_city" name="New_city" placeholder="City" required>
          </div>

             <button class="btn btn-info" type="submit">Update</button>
    </form>
</div>

<div class="container">
<h1>Change password</h1>
 <form  method="post" action="/password-change">
         <input type="hidden", name="_csrf", value="{{csrfToken}}">  

         <div class="form-group">
        <input id="Old-password" type="password" class="form-control" name="Old_password" placeholder="Old Password">
          </div>
        
        <div class="form-group">
        <input id="New_password" type="password" class="form-control" name="New_password" placeholder="New Password" minlength="6"oninvalid="this.setCustomValidity('Password must be at least 6 characters')"
    oninput="setCustomValidity('')">
          </div>
        
        <div class="form-group"> 
        <input id="New_password1" type="password" class="form-control" name="New_password1" placeholder="New Password Confirmation" minlength="6"oninvalid="this.setCustomValidity('Password must be at least 6 characters')"
    oninput="setCustomValidity('')">
          </div>


             <button class="btn btn-info" type="submit">Update</button>
    </form>
</div>
